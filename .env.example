# environment variable configuration
# copy this to .env and customize

# required in production
# generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
TASTIE_SECRET_KEY=

# environment: development, production, or test
ENVIRONMENT=development

# reverse proxy support: (true/false)
# SECURITY WARNING: only enable when running behind a trusted reverse proxy!
# when enabled, the app trusts X-Forwarded-For and X-Forwarded-Proto headers
# this is required for correct client ip detection for rate limiting
# NEVER enable this if the app is directly exposed to the internet -- attackers can spoof headers.
TASTIE_TRUST_PROXY=false

# require invite codes for registration (true/false)
TASTIE_REQUIRE_INVITE_CODE=true

# admin password for database migrations (optional)
# if not set, a random password will be generated and displayed once at startup
TASTIE_ADMIN_PASSWORD=

# logging (optional)
# leave empty for stdout only
TASTIE_LOG_FILE=
# log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
TASTIE_LOG_LEVEL=INFO

# database path (optional, for docker deployments)
# default: ./tastie.db
# TASTIE_DATABASE_PATH=/app/data/tastie.db

# site name is used for docker & caddy, as well as text fields on the site
# default: tast.ie
# TASTIE_SITE_NAME=bookmarks.example.com
